{
	"name": "playnite-insights",
	"private": true,
	"version": "2.2.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host --port 3000",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preversion": "npm run test",
		"test": "vitest run",
		"test:watch": "vitest run -w",
		"test:unit": "vitest run --project unit",
		"test:integration": "vitest run --project integration"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"fake-indexeddb": "^6.2.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"vite": "^6.2.6",
		"@inlang/paraglide-js": "^2.9.1"
	},
	"dependencies": {
		"@lucide/svelte": "^0.525.0",
		"@playatlas/auth": "workspace:*",
		"@playatlas/bootstrap": "workspace:*",
		"@playatlas/common": "workspace:*",
		"@playatlas/game-library": "workspace:*",
		"@playatlas/game-session": "workspace:*",
		"@playatlas/playnite-integration": "workspace:*",
		"@playnite-insights/core": "workspace:*",
		"@playnite-insights/infra": "workspace:*",
		"@playnite-insights/lib": "workspace:*",
		"echarts": "^5.6.0"
	},
	"engines": {
		"node": "^24.3.0",
		"pnpm": "^10.13.0"
	},
	"files": [
		"build",
		"package.json"
	]
}
