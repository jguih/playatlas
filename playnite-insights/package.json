{
	"name": "playnite-insights",
	"private": true,
	"version": "2.2.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host --port 3001",
		"build": "vite build",
		"preview": "vite preview --host --port 3001",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preversion": "npm run test",
		"test": "vitest run",
		"test:watch": "vitest run -w",
		"test:unit": "vitest run --project unit",
		"test:integration": "vitest run --project integration"
	},
	"devDependencies": {
		"@faker-js/faker": "catalog:",
		"@types/node": "catalog:",
		"svelte": "catalog:svelte5",
		"svelte-check": "catalog:svelte5",
		"@sveltejs/adapter-node": "catalog:svelte5",
		"@sveltejs/kit": "catalog:svelte5",
		"@sveltejs/vite-plugin-svelte": "catalog:svelte5",
		"@tailwindcss/typography": "catalog:tailwind4",
		"@tailwindcss/vite": "catalog:tailwind4",
		"tailwindcss": "catalog:tailwind4",
		"fake-indexeddb": "^6.2.2",
		"vite": "^6.2.6",
		"@inlang/paraglide-js": "^2.9.1",
		"vitest": "catalog:"
	},
	"dependencies": {
		"@lucide/svelte": "^0.525.0",
		"@playatlas/auth": "workspace:*",
		"@playatlas/bootstrap": "workspace:*",
		"@playatlas/common": "workspace:*",
		"@playatlas/game-library": "workspace:*",
		"@playatlas/game-session": "workspace:*",
		"@playatlas/playnite-integration": "workspace:*",
		"@playnite-insights/core": "workspace:*",
		"@playnite-insights/infra": "workspace:*",
		"@playnite-insights/lib": "workspace:*",
		"echarts": "^5.6.0",
		"zod": "catalog:",
		"sharp": "catalog:",
		"ulid": "catalog:"
	},
	"engines": {
		"node": "^24.3.0",
		"pnpm": "^10.13.0"
	},
	"files": [
		"build",
		"package.json"
	]
}
